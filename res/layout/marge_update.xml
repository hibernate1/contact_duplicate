<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/edit_phone"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#2989DD"
        android:gravity="center"
        android:text="Merge Result"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/edit_phone"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip" >

        <!-- name_marge Of Song -->


        <!-- checkBox1 Name -->

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox2"
            android:layout_below="@id/checkBox2"
            android:layout_marginTop="1dip"
            android:layout_toLeftOf="@+id/merge_build"
            android:text=""
            android:textColor="#343434"
            android:textSize="14dip" />

        <!-- Rightend Duration -->

        <ImageView
            android:id="@+id/merge_build"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/checkBox1"
            android:layout_alignRight="@+id/checkBox1"
            android:src="@drawable/ic_build_black_24dp"
            android:tint="#FF0040" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name_marge"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/name_marge"
            android:textColor="#343434"
            android:textSize="14dp" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox1"
            android:layout_below="@+id/checkBox1"
            android:layout_toLeftOf="@+id/merge_build"
            android:textColor="#343434"
            android:textSize="14dip" />

        <ListView
            android:id="@+id/mod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/marge"
            android:divider="@drawable/list_divider" android:dividerHeight="3px"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1" >
        </ListView>

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/checkBox3"
            android:gravity="right"
            android:text="Save in device contact"
            android:textColor="#10bcc9"
            android:textSize="15dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name_marge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Rihanna "
            android:textColor="#343434"
            android:textSize="30dip"
            android:textStyle="bold"
            android:typeface="sans" />
       

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:background="#2989DD"
            android:layout_height="30dip"
            android:gravity="center"
            android:textColor="#ffffff"
            
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/duration"
            android:text="Bellow Contact(s) will be Merged" />

    
</RelativeLayout>
</RelativeLayout>